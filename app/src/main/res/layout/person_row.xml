<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        android:id="@+id/personContainer"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:padding="3dp"
>

    <TextView
            android:id="@+id/idAndNameTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@id/personContainer"
            app:layout_constraintTop_toTopOf="@id/personContainer"
            app:layout_constraintRight_toRightOf="@id/personContainer"
    />

    <TextView
            android:id="@+id/ageTV"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@id/personContainer"
            app:layout_constraintTop_toBottomOf="@id/idAndNameTV"
    />

    <TextView
            android:id="@+id/genderTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            app:layout_constraintLeft_toRightOf="@id/ageTV"
            app:layout_constraintTop_toBottomOf="@id/idAndNameTV"
            app:layout_constraintRight_toLeftOf="@id/heightTV"
    />

    <TextView
            android:id="@+id/heightTV"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@id/idAndNameTV"
            app:layout_constraintRight_toLeftOf="@id/waveBtn"
    />

    <Button
            android:id="@+id/waveBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/idAndNameTV"
            app:layout_constraintRight_toRightOf="@id/personContainer"
            android:text="Wave"
    />

</android.support.constraint.ConstraintLayout>